<div class="row">
    <div class="span3 offset6" id="user-form-div">
        <div id="sign-up-header">
           <h4>New to FolioShine? <span id="sign-up-span">Sign up</span></h4> 
        </div>
        <%= form_for @user do |f| %>
            <% if @user.errors.any? %>
                <div class="error_messages">
                    <h2>Form is invalid</h2>
                    <ul>
                        <% @user.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                    </ul>
                </div>
            <% end %>

            <div class="field">
                <%= f.text_field :email, placeholder: 'Email' %>
            </div>

            <div class="field">
                <%= f.password_field :password, placeholder: 'Password' %>
            </div>

            <div class="field">
                <%= f.password_field :password_confirmation, placeholder: 'Re-type Password' %>
            </div>

            <div class="actions"><%= f.submit "Sign up", class: 'btn btn-primary' %></div>

        <% end %>
    </div>
</div>
