<div class="row">
    <div class="span3 offset6" id="session-form-div">
        <div id="sign-in-header">
           <h4>Sign in</h4> 
        </div>
        <%= form_tag sessions_path do %>
            <div class="field">
                <%= text_field_tag :email, "", placeholder: 'Email' %>
            </div>
            <div class="field" id="sign-in-password">
                <%= password_field_tag :password, "", placeholder: 'Password' %>
                <%= submit_tag "Log In", class: 'btn btn-primary', id: 'sign-in-submit' %>
            </div>
            
            <div class="field" id="remember-me">
                <%= check_box_tag :remember_me, 1, params[:remember_me] %>
                <%= label_tag :remember_me %>
                <p><%= link_to "Forgot password?", new_password_reset_path %></p>
            </div>
            <div class="actions"></div>

        <% end %>
    </div>
</div>
<div class="row">
    <div class="span3 offset6" id="user-form-div">
        <div id="sign-up-header">
           <h4>New to FolioShine? <span id="sign-up-span">Sign up</span></h4> 
        </div>
        <%= form_for @user do |f| %>
            <% if @user.errors.any? %>
                <div class="error_messages">
                    <h2>Form is invalid</h2>
                    <ul>
                        <% @user.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                    </ul>
                </div>
            <% end %>

            <div class="field">
                <%= f.text_field :email, placeholder: 'Email' %>
            </div>

            <div class="field">
                <%= f.password_field :password, placeholder: 'Password' %>
            </div>

            <div class="field">
                <%= f.password_field :password_confirmation, placeholder: 'Re-type Password' %>
            </div>

            <div class="actions"><%= f.submit "Sign up", class: 'btn btn-primary' %></div>

        <% end %>
    </div>
</div>
